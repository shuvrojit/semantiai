{
  "name": "Semantiai",
  "description": "Your personal assistant for every website",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Semantiai extension"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
